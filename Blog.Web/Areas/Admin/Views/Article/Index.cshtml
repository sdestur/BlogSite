@using Blog.Web.Constants

@model List<ArticleDto>
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Makale Yönetimi/</span> Makaleler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            @{
                if (User.IsInRole($"{RoleConsts.SuperAdmin}") && User.IsInRole(($"{RoleConsts.Admin}")))
                {
                    <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Article" asp-action="Add">
                        <i class="bx bx-plus"></i>Makale Ekle
                    </a>
                }
            }

            
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        @{
                            if (User.IsInRole($"{RoleConsts.SuperAdmin}") && User.IsInRole(($"{RoleConsts.Admin}")))
                                        {
                                <th>İşlemler</th>
                            }
                        }
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        @{
                            if (User.IsInRole($"{RoleConsts.SuperAdmin}") && User.IsInRole(($"{RoleConsts.Admin}")))
                            {
                                <th>İşlemler</th>
                            }
                        }
                        
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <th>@article.Title</th>
                            <th>@article.Category.Name</th>
                            <th>@article.CreatedDate.ToShortDateString()</th>
                            <th>@article.CreatedBy</th>
                            <th>@(article.IsDeleted ? "Aktif Değil" : "Aktif")</th>

                            @{
                                if (User.IsInRole($"{RoleConsts.SuperAdmin}") && User.IsInRole(($"{RoleConsts.Admin}")))
                                {
                                    <th>
                                        <a class="btn btn-primary btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Update" asp-route-articleId="@article.Id"><i class="bx bx-edit"></i></a>
                                        <a class="btn btn-danger btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id"><i class="bx bx-minus-circle"></i></a>
                                    </th>
                                }
                            }

                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

 </div>

@section Scripts{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}