@model UserUpdateDto


<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Kullanıcı Yönetimi/</span> Kullanıcı Güncelle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Default</h5>
                <form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:red"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">Kullanıcı ismi</label>
                            <input asp-for="FirstName" type="text" class="form-control mb-3" placeholder="Lütfen kullanıcı ismi giriniz." aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">Kullanıcı Soyismi</label>
                            <input asp-for="LastName" type="text" class="form-control mb-3" placeholder="Lütfen kullanıcı soyismi giriniz" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Kullanıcı Email Adresi</label>
                            <input asp-for="Email" type="email" class="form-control mb-3" placeholder="Lütefen kullanıcı email adresini giriniz." aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">Kullanıcı Telefon Numarası</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" placeholder="Lütfen kullanıcı telefon adresini giriniz." aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="RoleId" class="form-label">Kullanıcı Rolü</label>
                            <select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                        </div>
 
                        <div class="form-group">
                            <button typr="submit" class="btn btn-primary btn-block">Kaydet</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>
